<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <top>
      <Label text="Lab3_SpellChecker" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </Label>
   </top>
   <center>
      <VBox prefHeight="301.0" prefWidth="371.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Choose the language:" />
                  <ComboBox fx:id="Combobox" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="4.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <TextArea fx:id="txtInput" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets left="7.0" right="7.0" />
               </VBox.margin>
            </TextArea>
            <Button fx:id="btnSpellCheck" mnemonicParsing="false" onAction="#doSpellCheck" prefHeight="25.0" prefWidth="86.0" text="Spell Check">
               <VBox.margin>
                  <Insets left="270.0" />
               </VBox.margin>
            </Button>
            <Label text="Wrong words" />
            <TextArea fx:id="txtResult" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets left="7.0" right="7.0" />
               </VBox.margin>
            </TextArea>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="lblErrori" prefHeight="17.0" prefWidth="89.0" text="Label">
                     <HBox.margin>
                        <Insets left="230.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#doReset" prefHeight="25.0" prefWidth="89.0" text="Clear Text">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label />
         </children>
      </VBox>
   </center>
</BorderPane>
